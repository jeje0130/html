<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel = "stylesheet" href = "../css/public.css">
<script>

now = new Date();

function proc1() {
	//100일의 millisec값 구하기
	day100 = 100 * 1000 * 60 * 60 * 24;
	
	//현재날짜의 millisec
	nowtime = now.getTime();
	
	times = nowtime + day100;
	
	newdate = new Date(times);
	
	res = "오늘 날짜 : " + now.toLocaleString() + "<br>";
	res += "100일 후 날짜 : " + newdate.toLocaleString() + "<br>";
	
	//출력
	result = document.getElementById("result1");
	result.innerHTML = res;
}

function proc2() {
	//설날
	a = new Date("2021. 02. 12");
	
	//각 각의 millisec 값을 구한다
	nowtime = now.getTime(); 
	a = a.getTime();
	
	//각 millisec 값을 더한다
	times = nowtime + a;
	
	//새로운 객체를 생성
	newdate = new Date(times);
	
	//새로운 객체의 millisec 구하기
	newMilli = newdate.getTime();
	
	//남은 일 구하기
	day = newMilli / 1000 / 60 / 60 / 24;
	
	//출력모양
	res = "오늘 날짜 : " + now.toLocaleString() + "<br>";
	res += "설날까지 남은 날짜 : " + day.toLocaleString() + "<br>";
	
	//출력
	result = document.getElementById("result2");
	result.innerHTML = res;
}

</script>
<style>
</style>
</head>
<body>

<div class="box">
	100일후의 날짜를 구한다<br>
	
	1dlfdml millisec 값<br>
	1 * 1000 * 60 * 60 * 24
 <br><br>
	
<input type="button" value="확인" onclick="proc1()">

<div id="result1"></div>
</div>

<div class="box">
	설날까지 남은 날수<br>
	

 <br><br>
	
<input type="button" value="확인" onclick="proc2()">

<div id="result2"></div>
</div>
