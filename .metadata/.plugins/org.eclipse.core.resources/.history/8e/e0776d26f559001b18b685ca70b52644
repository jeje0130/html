<title>Insert title here</title>
<link rel = "stylesheet" href = "../css/public.css">
<script>

now = new Date();

function proc1() {
	//100일의 millisec값 구하기
	day100 = 100 * 1000 * 60 * 60 * 24;
	
	//현재날짜의 millisec
	nowtime = now.getTime();
	
	times = nowtime + day100;
	
	newdate = new Date(times);
	
	res = "오늘 날짜 : " + now.toLocaleString() + "<br>";
	res += "100일 후 날짜 : " + newdate.toLocaleString() + "<br>";
	
	//출력
	result = document.getElementById("result1");
	result.innerHTML = res;
}

</script>
<style>
</style>
</head>
<body>

<div class="box">
	100일후의 날짜를 구한다<br>
	
	1dlfdml millisec 값<br>
	1 * 1000 * 60 * 60 * 24
 <br><br>
	
<input type="button" value="확인" onclick="proc1()">

<div id="result1"></div>
</div>
</body>
