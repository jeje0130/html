<script>
//준비되면
$(function() {
	
	//버튼 클릭시
	$('input:button').on('click', function() {
		
		//dom 변수, dom 엘리먼트  
		res1 = document.getElementById('result1'); 
		
		//dom 엘리먼트 는 css()jQuery메소드 사용불가;
		//res1.css('background','yellow');  => 안나옴
		res1.style.background = 'yellow';
		
	})
	
})

</script>
