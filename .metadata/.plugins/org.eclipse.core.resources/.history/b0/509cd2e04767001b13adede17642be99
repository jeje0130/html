<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<link rel = "stylesheet" href = "../css/public.css">
<script>

$(function () {
	//lprod 테이블의 데이터 조회
	$('input').on('click', function () {
		
		$.ajax({
			url : '../0203/lprod.jsp',
			/* type : 'get',     => type이 get일때 생략 가능
			data : ''            => data 없으면 생략 가능 */
			success : function (res) {
				code = "";
				$.each(res, function (i, v) {
					
					code += `<option value='${v.gu}'>${v.nm}</option>`;
				})
				
				$('#lprod').html(code);
				
			},
			error : function (xhr) {
				alert("상태 : " + xhr.status);
			},
			dataType : 'json'
			
		})
	})
	
	//lprod에서 하나를 선택하면 change 이벤트
	//option의 value값을 가져온다. val()
	$('#lprod').on('change', function () {
		//$('#lprod option:selected')
		lprod_gu = $('option:selected', this).val();
		
		$.ajax({
			url : 'prodName.jsp',
			type : 'post',
			data : {"gu" : lprod_gu},
			success : function (res) {
				
				code ="";
				
				$.each(res, function (i, v) {
					
					code += "<option value='" + v.id + "'>" + v.name + "</option>";
				
				})
				$('#prod').html(code);
				
			},
			error : function (xhr) {
				elert("상태 : " + xhr.status) //200(json 데이터 오류(jsp파일 확인)), 404, 500
			},
			dataType : 'json'
		})
	})
	
	//prod를 change하면 해당제품의 detail을 출력
	//선택한 option의 value값을 가져온다. val()
	//queryForObject를 수행
	
	$('#prod').on('change', function () {
		prod_id = $('option:selected', this).val();
		
		$.ajax({
			url : 'prodDetail.jsp',
			type : 'post',
			data : {"id" : prod_id},
			success : function (res) {
				$('#detail').html(res);
			},
			error : function (xhr) {
				elert("상태 : " + xhr.status) 
			},
			dataType : 'html'  
		})
	})
	
})

</script>
<style>
</style>
</head>
<body>
<div class="container">
  <h2>제품 분류 리스트</h2>
  <p>분류명 lprod</p>
  <form>
    <div class="form-group">
      <label for="lprod">제품명</label>
      <select class="form-control" id="lprod">
      </select>
      <br><br>
      
      <label for="prod">상품명</label>
      <select class="form-control" id="prod">
      </select>
    </div>
  </form>
</div>

<br><br>

<div class="container" id="detail">
</div>


