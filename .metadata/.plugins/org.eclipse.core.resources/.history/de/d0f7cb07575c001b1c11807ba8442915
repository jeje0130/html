<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel = "stylesheet" href = "../css/public.css">
<script src="../js/jquery-3.5.1.min.js"></script>
<script>
//준비되면
$(function() {
	
	//버튼 클릭시
	$('input:button').on('click', function() {
		
		//dom 변수, dom 엘리먼트  
		res1 = document.getElementById('result1'); 
		
		//dom 엘리먼트 는 css()jQuery메소드 사용불가;
		//res1.css('background','yellow');  => 안나옴
		res1.style.background = 'yellow';
		
		//dom 엘리먼트를 $()로 감싸주면 jQuery객체로 변환된다
		$(res1).css('background','blue');
		
		//2번째 h2를 선택한다 - aa, bb는 jQuery변수
		aa = $('h2:eq(2)')
		bb = $('h2').eq(3)
		aa.css('color','red')
		bb.css('font-size','50px')
		
		//cc는 [4]에 의해서 dom엘리먼트로 변경
		cc = $('h2')[4]
		cc.style.color = 'green';
		$(cc).css('border','2px solid red')
		
	})
	
})

</script>
<style>
</style>
</head>
