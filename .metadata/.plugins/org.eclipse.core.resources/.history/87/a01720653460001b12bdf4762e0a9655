<script>
$(function () {
	$('.box1 > input:button').on('click', function() {
		$('#result1 :disabled').css('border','3px solid red');
	})
	
	$('.box2 > input:button').on('click', function() {
		//$('#result2 :checkbox:checked')
		
		res = "";
		$(':checkbox:checked').each(function() {
			res += $(this).val() + " "
		})
		res += "를 선택하셨습니다.";
		//alert(res);
		$('#result2 div').html(res).css({'border':'3px dotted gray',
										'font-size':'1.5em'});
		
	})
	
	
})
</script>
