$(function () {
	//$('img').css({ 'width' : '150px', 'height' : '150px'})
	
	$('#btn1').on('click', function () {
		//$('img').animate({ 'left':'200px', 'width': '+=100px', 'height' : '+=100px' }, 1000);
		$('img').animate({ 'left':'100px'}, 500)
				.delay(500)
				.animate({ 'width': '+=100px', 'height' : '+=100px'}, 500)
				.delay(500)
				.animate({ 'left':'-=100px'}, 500)
				.delay(500)
				.animate({ 'width': '-=100px', 'height' : '-=100px'}, 500)
	})
	
	$('#btn2').on('click', function () {
		//$('p').css('font-size','+=20px'); 
		
		$('p').animate({ 'font-size':'+=20px'}, 500)
		
		/* $('p').animate({ 'left':'+=200px'}, 500)
			  .delay(500)
			  .animate({ 'font-size':'+=20px'}, 500)
			  .delay(500)
			  .queue(function () {
				  $(this).css('color', 'red');
				  $(this).dequeue();
			})
			.animate({ 'left':'-=200px'}, 500)
			.animate({ 'font-size':'-=20px'}, 500) */
		
	})
})
</script>
