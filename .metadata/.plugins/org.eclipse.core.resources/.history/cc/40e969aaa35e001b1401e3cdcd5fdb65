<script>
$(function() {
	//버튼 클릭하면 - p태그 내용 가져오기
	$('input[value=html]').on('click', function() {
		a = $('p').html();
		
		//alert(a);
		$('#result1').html(a);
		$('#result1').text(a);
	})
	
	$('input[value=text]').on('click', function() {
		a = $('p').text();
		
		alert(a);
	})
})
</script>
<style>
span{
	background: yellow;
}
