<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel = "stylesheet" href = "../css/public.css">
<script>
	//객체생성
	var rect = {
		width : 12,
		height : 4,
		getArea : function(){ 
			area = this.width * this.height;
			return area;
		},
		getCircum : function(){
			var circum = (this.width + this.height) * 2;
			return circum;
		}
			
	};

	function proc1() {
		//alert("함수호출");
		
		print("#result1");
		
	}
	
	function print(out) {
		//출력모양
		res = ` 가로 :  ${rect.width} <br>`;
		res += `세로 :  ${rect.height} <br>`;
		
		a = rect.getArea();
		
		res += `면적 : ${a} <br>`;
		
		res += `둘레 : ${rect.getCircum()} <br>`;
		
		result= document.querySelector(out);
		result.innerHTML = res;
	}
	
	function proc2() {
		
		//가로, 세로 입력 - prompt
		a = prompt("가로 길이 입력");
		b = prompt("세로 길이 입력");
		
		//rect객체에 가로 세로 속성
		rect.width = a;
		rect.height = b;
		
		//출력
		print("#result2");
		
	}

</script>
<style>
</style>
</head>
<body>

<div class="box">
	
 <br><br>
	
<input type="button" value="확인" onclick="proc1()">
<input type="button" value="변경" onclick="proc2()">

<div id="result1"></div>
<div id="result2"></div>
</div>
</body>
</html>