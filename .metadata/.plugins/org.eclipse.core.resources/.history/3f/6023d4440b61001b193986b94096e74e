<script>
$(function () {
	$('#b1').on('click', function () {
		$('#result1').remove();
		$('#result2').remove();
	})
	
	$('#b2').on('click', function () {
		$('#result1').empty();
		$('#result2').empty();
		
	})
	
	$('#b2').on('click', function () {
		$('p').remove('.pp');
	})
	
})

</script>
<style>
.box div{
	background: #B9E2FA;
}
