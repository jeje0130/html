<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel = "stylesheet" href = "../css/public.css">
<script src="../js/jquery-3.5.1.min.js"></script>
<script>

$(function () {
	//$('.box1 input[type=button]')
	$('.box1 input:button').on('click', function() {
		
		//input 요소 테두리 lime, 배경색  핑크
		$('#result1 :input').css({'border':'3px solid lime',
								 'background' : 'coral'});
		//input type이 button 인 요소 배경색 노란
		$('#result1 input:button').css('background', 'yellow');
		
		//Button 요소와 input type이 button 인 요소 배경색 하늘색
		//$('#result1 button, #result1 input:button')
		$('#result1 :button').css('background', 'cyan');
		
		//Type이 submit 요소의 배경색 녹색
		$('#result1 input:submit').css('background', 'green').css('border', '3px solid red');
		
		//Type이 reset인 요소의 배경색 노랑 
		$('#result1 input:reset').css('background', 'yellow');
		
		//Type이 text, password 인 요소의 테두리 파랑
		$('#result1 :text, #result1 :password').css('border', '3px dotted blue');
		
		//Type이 file, image인요소의 테두리 빨강
	})


	
})
</script>
<style>
input[type=image]{
	width: 50px;
	height: 50px;
}
</style>
</head>
