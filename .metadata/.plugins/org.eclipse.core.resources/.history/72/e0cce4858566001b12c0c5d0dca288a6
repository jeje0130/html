<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel = "stylesheet" href = "../css/public.css">
<script src="../js/jquery-3.5.1.min.js"></script>
<script>
$(function () {
	$('input:button').on('click', function () {
		
		$.ajax({
			url : 'buyerNames.jsp',
			type : 'get',
			success : function (res){
				
				code = "";
				
				$.each(res, function (i, v) {
					code += "<p id='"+ v.id + "'>" + v.name + "</p>";
				})
				
				$('#names').html(code);
			},
			error : function (xhr) {
				alert("상태 : "+ xhr.status)
			},
			dataType : 'json'
			
		})
	})
	
	$('#names').on('click', 'p', function () {
		
		idvalue = $(this).attr('id');
		
		$.ajax({
			url : 'buyerDetails.jsp',
			type : 'post',
			data : { "id" : idvalue },
			seccess : function (res) {
				
				 code = "<p>BUYER_ID" + res.ID + "</p>"
                 code += "<p>BUYER_NAME" +   res.NAME + "</p>"
                 code += "<p>BUYER_LGU" +   res.LGU + "</p>"
                 code += "<p>BUYER_BANK" + res.BANK + "</p>"
                 code += "<p>BUYER_BANKNO" + res.BANKNO + "</p>"
                 code += "<p>BUYER_BANKNAME" + res.BANKNAME + "</p>"
                 code += "<p>BUYER_ZIP" + res.ZIP + "</p>"
                 code += "<p>BUYER_ADD1 " + res.ADD1 + "</p>"       
                 code += "<p>BUYER_ADD2 " + res.ADD2 + "</p>"       
                 code += "<p>BUYER_COMTEL " + res.COMTEL + "</p>"       
                 code += "<p>BUYER_FAX " + res.FAX + "</p>"       
                 code += "<p>BUYER_MAIL " + res.MAIL + "</p>"       
                 code += "<p>BUYER_CHARGER " + res.CHARGER + "</p>"       
                 code += "<p>BUYER_TELEXT" + res.TELEXT + "</p>"
                 
                 $('#result1').html(code);
			},
			error : function (xhr) {
				
			},
			dataType : 'json'  //html, text 
			
		})
	})
})

</script>
<style>
td{
	height: auto;
	padding: 10px;
	text-align: center;
}
#names{
	width: 200px;
}

#details{
	width: 400px;
}
p:hover{
	background: lime;
}
</style>
