<script>
//arr = new Array("사과","복숭아","참외","포도","자두")
arr = ["사과","복숭아","참외","포도","자두","사과","메론","자몽","사과"]

function proc1() {
	item = prompt("과일을 입력하세요");
	idx = arr.indexOf(item);
	
	//alert(`${item}는   ${idx} 번째 있습니다`)
	//있는지 없는지 비교
	res = "";
	if(idx < 0){
		res += `${item}은 없는 과일입니다`;
	}else{
		res += `${item}는   ${idx} 번째 있습니다`;
	}
	
	//출력
	result = document.getElementById('result1');
	result.innerHTML = res;
}

/* ----------------------------------------------------------------------- */

function proc2() {
	item = prompt("과일을 입력하세요");
	idx = arr.lastIndexOf(item);  //마지막 인덱스로 검색
	
	//alert(`${item}는   ${idx} 번째 있습니다`)
	//있는지 없는지 비교
	res = "";
	if(idx < 0){
		res += `${item}은 없는 과일입니다`;
	}else{
		res += `${item}는   ${idx} 번째 있습니다`;
	}
	
	//출력
	result = document.getElementById('result2');
	result.innerHTML = res;
	
}

/* ----------------------------------------------------------------------- */

function proc3() {
	idx = 0;
	
	//입력
	item = prompt("입력하세요");
	str = "찾는 과일 " + item + "는 ";
	
	while(true){
		
		idx = arr.indexOf(item, idx);
		if(idx < 0) break;
		str += idx + "번째 "
		
		idx ++;
	}
	//출력
	result = document.getElementById('result3');
	result.innerHTML = str + "있습니다";
	
}

/* ----------------------------------------------------------------------- */

function proc4() {
	
	//추가할 데이터 입력
	item = prompt("추가할 데이터를 입력하세요");
	
	arr.push(item);
	
	//출력
	result = document.getElementById('result4');
	result.innerHTML = arr;
	
}

/* ----------------------------------------------------------------------- */

function proc5() {
	
	arr2 = arr.pop();
	
	//출력
	result = document.getElementById('result5');
	result.innerHTML = arr;
}

/* ----------------------------------------------------------------------- */

function proc6() {
	
	res = "원래 배열 : " + arr + "<br>";
	
	arr2 = arr.reverse();
	
	res += "arr.reverse() : " + arr2;
	
	//출력
	result = document.getElementById('result6');
	result.innerHTML = res;
}

/* ----------------------------------------------------------------------- */

function proc7() {
	
	res = "원래 배열 : " + arr + "<br>";
	
	arr2 = arr.sort();
	
	res += "arr.sort() : " + arr2 + "<br>";
	
	arr3 = arr2.reverse();
	
	res += "arr2.reverse() : " + arr3 + "<br>";
	
	//출력
	result = document.getElementById('result7');
	result.innerHTML = res;
}

/* ----------------------------------------------------------------------- */

function proc8() {
	
	item1 = prompt("과일 이름1 입력");
	item2 = prompt("과일 이름2 입력");

	//복숭아, 메론 위치 찾기
	start = arr.indexOf(item1);
	end = arr.indexOf(item2, start+1); // 2번째 위치부터 찾기
	
	//복숭아, 메론 사이의 요소를 자르기
	arr2 = arr.slice(start, end);
	
	res = "원래 배열 : " + arr + "<br>";
	res += `${item1} ~ ${item2} 사이의 요소 자르기 <br>`
	res += `arr.slice(${start}, ${end}) : ${arr2} <br>`
	
	//출력
	result = document.getElementById('result8');
	result.innerHTML = res;
	
}

/* ----------------------------------------------------------------------- */

function proc9() {
	
	res = "원래 배열 : " + arr + "<br>";
	
	arr.splice(3, 0, "앵두"); //3번째부터 0개 지우고 앵두 추가
	arr.splice(3, 2);
	
	
	res += `arr.splice(3, 0, "앵두") : ${arr} <br> `
	
	//출력
	result = document.getElementById('result9');
	result.innerHTML = res;
	
}

/* ----------------------------------------------------------------------- */

function proc10(){
	
   arr2 = ["홍길동", "개나리", "진달래", "무궁화", "수선화"];
   
   arr3 = arr.concat(arr2);
   
   res = "";
   for(i=0; i<arr3.length; i++){
      res += `${i}번째 요소 : ${arr3[i]} <br>`
   }
   result = document.getElementById('result10');
   result.innerHTML = res;
}


function proc11() {
	
	str = arr.join();
	res = 0;
	
	for(i=0; i<str.length; i++){
		res += `${i}번째 요소 : ${str[i]} <br>`
	}
	
	result = document.getElementById('result11');
	result.innerHTML = res;
	
}

</script>
