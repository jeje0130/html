<script src="../js/jquery-3.5.1.min.js"></script>
<script>
$(function () {
	//p를 클릭하면 그림을 추가 
    $('p').on('click', function(){
    	vtitle = $(this).attr('title');
    	vtext = $(this).text();
    	
    	vimg = $('<img>',{
    		'src' : '../images/'+ vtitle + '.jpg',
    		'alt' : vtitle,
    		'width' : '100px',
    		'height' : '100px'
    	});
    	
    	//$(vimg).insertAfter($(this)); //테두리 바깥쪽
    	//$(vimg).appendTo($(this)); //테두리 안쪽, 앞쪽 생성
    	//$(vimg).prependTo($(this)); //테두리 안쪽, 뒤쪽 생성
    	$(vimg).insertBefore($(this)); //테두리 바깥쪽, 앞쪽 생성
    	
    });

})

</script>
