<script src="../js/jquery-3.5.1.min.js"></script>
<script>
$(function () {
	
	$('#start').on('click', function () {
		
		//$(this).hide(); //안보이게
		//$(this).css('display','none'); //안보이게
		
		$(this).prop('disabled',true); //보이지만 사용불가
		
		a = setInterval(function () {
			
			$('#result1 img:first').appendTo($('#result1'));
			console.log(a);
			
		}, 500);
	})
	
	$('#stop').on('click', function () {
		clearInterval(a);
		
		$('#start').prop('disabled',false);
		//$('#start').css('display','inline');
	})
	
	
	//----------------------------------------------------------------
	
	$('.box2 input:button').on('click', function () {
		//문자배열 생성
		arr = ["Hello","목요일","내일은 금요일","ㅋㅋㅋㅋㅋ","집에가자","사과농장주"];
		
		//arr[0] arr[2]
		rnd = Math.floor(Math.random()*arr.length);
		
		ptag = $('<p></p>',{ 
			'id':'pp', 'text':arr[rnd]
		});
		
		$('#result2').prepend(ptag);
		
		//$(ptag).prependTo($('#result2'));
		
	})
	
	
})
</script>
<style>

img{
	width: 120px;
	height: 120px;
}

</style>
</head>
<body>

<div class="box box1">
	setInterval(function () {}, millsec) <br>
	millsec로 정해진 시간마다 매번 반복적으로 실행 <br>
	ex) setInterval(function () {}, 1000); -> 1초마다 한번씩 실행
 <br><br>
	
<input id="start" type="button" value="확인">
<input id="stop" type="button" value="종료">

