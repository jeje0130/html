<script src="../js/jquery-3.5.1.min.js"></script>
<script>
$(function() {
	//버튼 클릭하면 - p태그 내용 가져오기
	$('input[value=html]').on('click', function() {
		/*------------------------------------------
		a = $('p').html(); // 첫번째꺼 1개만 가져온다
		
			alert(a);
		
		$('#result1').html(a); -span 태그 모양 실행된 그대로 가져옴
		$('#result1').text(a); //span 태그 글자가 찍힌다 
		------------------------------------------------*/
		
		//p태그 내용 모두 가져오기 - 반복문
		res = "";
		$.each($('p'),function(i) {
			res += $('p').html() + "\n";
		})
		//alert(res);
		$('#result1').html(res);
		
	})
	
	$('input[value=text]').on('click', function() {
		a = $('p').text();
		
		//alert(a);
		$('#result2').html(a); //가져온 자료가 이미  text 자료

	})
})
</script>
<style>
span{
	background: yellow;
}
</style>
