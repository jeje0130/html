<script>

function proc1() {
	
	//배열선언
	arr = [];
	arr = new Array();
	
	res = "";
	while(true){
		//입력
		a = prompt("이름을 입력하세요");
		
		if(a == "" || a == null) break;
		
		//배열에 저장
		arr.push(a);
	}
	result = document.getElementById("result1")
	result.innerHTML = arr;
}
</script>
