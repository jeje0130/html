<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel = "stylesheet" href = "../css/public.css">
<script>
str = "I love korea 대한 민국 만세 화이팅";

function proc1() {
	
	idx = prompt("인덱스를 입력하세요", "0~ " + (str.length-1));
	a = str.charAt(idx);
	
	result = document.getElementById("result1");
	result.innerHTML = "str.charAt(" + idx + ") = " + a;
}

function proc2() {
	
	idx = prompt("인덱스를 입력하세요", "0~ " + (str.length-1));
	a = str.charCodeAt(idx);
	
	result = document.getElementById("result2");
	result.innerHTML = "str.charAt(" + idx + ") = " + a;
	
}



function proc3() {
	
	
	while(true){
		ss = prompt("검색문자를 입력하세요");
		if(ss == "" || ss == null) break;
		
		idx = str.indexOf(ss);
	
		//문자열안에 있는지 없는지 비교
		if(idx < 0) continue;
	
		res = `str.indexOf(${ss}) = ${idx} <br>`;
	
		result = document.getElementById("result3");
		result.innerHTML += res;
	}
}


function proc4() {
	
	while(true){
		ss = prompt("검색문자를 입력하세요");
		if(ss == "" || ss == null) break;
		
		idx = str.lastIndexOf(ss);
	
		//문자열안에 있는지 없는지 비교
		if(idx < 0) continue;
	
		res = `str.lastIndexOf(${ss}) = ${idx} <br>`;
	
		result = document.getElementById("result4");
		result.innerHTML += res;
	}
}

function proc5() {
	
	res = "";
	
	while(true){
		aa = prompt("이름을 입력하세요");
		
		console.log(aa, aa.length);
		
		//aa에 스페이스바 입력시
		if(aa.trim().length < 1){
			alert("다시 입력하세요"); continue;
		}
		
		//취소버튼 클릭시 종료
		if(aa == null) break;
		
		res += `${aa} <br>`;
	}
	document.getElementById("result5").innerHTML += res;
}

</script>

<style>
</style>

</head>
<body>

<div class="box">
	* charAt(index) : index 위치의 문자를 구한다. <br>
	* charCodeAt(index) : index 위치의 문자에 대한 유니코드를 구한다.
 <br><br>
	
<input type="button" value="charAt" onclick="proc1()">
<input type="button" value="charCodeAt" onclick="proc2()">

<div id="result1"></div>
<div id="result2"></div>
</div>



<div class="box">
	* indexOf(value) : value 문자열의 위치를 검색한다. <br>
	* lastIndexOf(value) : value 문자열의 위치를 역방향에서 검색한다. 
 <br><br>
	
<input type="button" value="indexOf" onclick="proc3()">
<input type="button" value="lastIndexOf" onclick="proc4()">

<div id="result3"></div>
<div id="result4"></div>
</div>


<div class="box">
	* trim() :  앞 뒤의 공백을 제거한다.
	
 <br><br>
	
<input type="button" value="trim" onclick="proc5()">

<div id="result5"></div>
</div>


</body>
</html>