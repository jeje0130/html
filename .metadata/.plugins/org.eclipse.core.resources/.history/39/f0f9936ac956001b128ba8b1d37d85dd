	function proc1(){
		
		str = "";
		
		while(true){
			
			number = prompt("숫자 입력");
			
			if(a == "" || a == null) continue;
			
			for (i = 1;  i<=9; i++) {
				str += `${number} * ${i} = ${number*i} <br>`;
			}
			
			result= document.querySelector("#result1");
			result.innerHTML = str;
			
			//계속여부 판단
			a = confirm("계속 진행하시겠습니까?");
			if( !a ) break;
		}
	}

</script>
