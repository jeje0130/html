$(function () {
	
	//버튼 클릭하면
	$('input:button').on('click', function() {
		//h2의 자식 a태그의 스타일에 테두리 설정 - soild
		$('h2 > a').css('border', '5px solid red');
		
		//h2의 후손 a태그의 스타일 배경색 을 노란색으로 변경 
		$('h2 a').css('background', 'yellow');
	})
	
})
</script>
