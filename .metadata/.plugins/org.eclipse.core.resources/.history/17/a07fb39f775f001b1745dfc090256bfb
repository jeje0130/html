<script>

$(function() {
	$('.box1 > input[type=button]').on('click', function() {
		
		$('#result1 li:first, #result1 li:last').css('background', 'yellow');
		
		$('#result1 li:eq(5)').css('background', 'red');
		
		$('#result1 li:lt(4)').css('font-size', '2.0em').css('font-weight', 'bold');
		
	})
	
	$('.box2 > input[type=button]').on('click', function() {
		
		$('#result2 li:even').css('background', 'skyblue');
		
		$('#result2 li:odd').css('background', 'coral');
		
		
	})
	
	$('.box3 > input[type=button]').on('click', function() {
		
		$('#result3 li:not(".aa")').css('color', 'red');
		
	})
	
	
})

</script>
<style>
table{
	border: 2px solid white;
}
</style>
