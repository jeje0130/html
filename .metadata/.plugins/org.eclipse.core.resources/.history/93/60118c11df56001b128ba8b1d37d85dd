<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel = "stylesheet" href = "../css/public.css">
<script>
	//객체생성
	var rect = {
		width : 12,
		height : 4,
		getArea : function(){ 
			area = this.width * this.height;
			return area;
		},
		getCircum : function(){
			var circum = (this.width + this.height) * 2;
			return circum;
		}
			
	};
	
	//생성자에 의한 객체생성 - new 키워드로 생성후 사용
	function Rect(width, height) {
		//속성
		this.width = width;
		this.height = height;
		//메서드
		this.getArea = function() {
			area = this.width * this.height;
			return area;
		};
		
		this.getCircum = function() {
			var circum = (this.width + this.height) * 2;
			return circum;
		};
		
	}
	
	function proc3() {
		crect = new Rect(4, 5);  //매개변수 값 입력
		cprint(crect, "#result3")
		
		aa = new Rect(6, 6);
		cprint(aa, "#result3")
		
		name = "네모네모";
		bb = new Rect(3, 9);
		cprint(bb, "#result3", name)
	}
	
	
	function cprint(rectob, out, name) {
		//출력모양
		if(name != undefined){
			res = `이름 : ${name}`;
		}
		
		res = ` 가로 :  ${rectob.width} <br>`;
		res += `세로 :  ${rectob.height} <br>`;
		
		a = rectob.getArea();
		
		res += `면적 : ${a} <br>`;
		
		res += `둘레 : ${rectob.getCircum()} <br>`;
		
		result= document.querySelector(out);
		result.innerHTML = res;
	}
	

	function proc1() {
		//alert("함수호출");
		
		print("#result1");
		
	}
	
	function print(out) {
		//출력모양
		res = ` 가로 :  ${rect.width} <br>`;
		res += `세로 :  ${rect.height} <br>`;
		
		a = rect.getArea();
		
		res += `면적 : ${a} <br>`;
		
		res += `둘레 : ${rect.getCircum()} <br>`;
		
		result= document.querySelector(out);
		result.innerHTML = res;
	}
	
	function proc2() {
		
		//가로, 세로 입력 - prompt
		a = prompt("가로 길이 입력");
		b = prompt("세로 길이 입력");
		
		//rect객체에 가로 세로 속성
		rect.width = a;
		rect.height = b;
		
		//출력
		print("#result2");
		
	}

</script>
<style>
</style>
</head>
<body>

<div class="box">
	리터럴에 의한 객체 생성  <br>
	var rect = { }; <br>
	객체안에 선언되지 않은 속성이나 메서드를 필요시 언제든지 동적으로 추가해서 사용가능 <br>
	rect.width = 10 <br>
	<br>
	rect = { <br>
	    width : 12, <br>
		height : 4, <br>
		getArea : function(){  <br>
			area = this.width * this.height; <br>
			return area; <br>
		}, <br>
		getCircum : function(){ <br>
			var circum = (this.width + this.height) * 2; <br>
			return circum; <br>
		} <br>
	} <br>
 <br><br>
	
<input type="button" value="확인" onclick="proc1()">
<input type="button" value="변경" onclick="proc2()">

<div id="result1"></div>
<div id="result2"></div>
</div>


<div class="box">
	생성자에 의한 객체 생성  <br>
	
 <br><br>
	
<input type="button" value="확인" onclick="proc3()">
<input type="button" value="변경" onclick="proc4()">

<div id="result3"></div>
<div id="result4"></div>
</div>

