<script>

	function proc1(a) {
		
		//입력한 값 가져오기
		var x = document.querySelector("#x");
		var y = document.querySelector("#y");
		
		var x2 = parseInt(x.value);
		var y2 = parseInt(y.value);
		
		switch(a){
		case "+" :
			k = sum(); //함수호출
			break;
		case "-" :
			k = sub();
			break;
		case "*" :
			k = multi();
			break;
		case "/" :
			k = divide();
			break;
		}
		//출력
		result=document.querySelector("#result1");
		result.innerHTML = k;
	}
	
	function sum() {
		var res = x + y;
		return res;
	}
	
	function sub() {
		var res = x - y;
		return res;
	}
	
	function multi() {
		var res = x * y;
		return res;
	}
	
	function divide() {
		var res = x / y;
		return res;
	}
	
	

</script>
