<script>
$(function () {
	
	$('.box1 > input:button').on('click', function () {
		
	res = "";
	$('#spring option:selected').each(function (i) {
		res += $(this).val()+ " ";	
	})
	//alert(res);
	$('#result1 div').html(res).css({'background':'green',
									'font-size':'1.5em'});

	})
})
</script>
